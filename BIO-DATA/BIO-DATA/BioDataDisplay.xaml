<Window x:Class="BIO_DATA.BioDataDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bio Data Information" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Personal Information" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="InfoPanel" Margin="10">
                <!-- Information will be added dynamically in code-behind -->
            </StackPanel>
        </ScrollViewer>
        
        <Button Grid.Row="2" 
                Content="Download as Text File" 
                Width="150" 
                Height="40" 
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="DownloadButton_Click"/>
    </Grid>
</Window>
