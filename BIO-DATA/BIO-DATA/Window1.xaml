<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="BIO_DATA.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="BIO-DATA"
	MinWidth="600"
	MinHeight="850"
	Width="600"
	Height="850"
	WindowStartupLocation="CenterScreen">
	<!-- Soft gradient background -->
	<Window.Background>
		<LinearGradientBrush
			StartPoint="0,0"
			EndPoint="1,1">
			<GradientStop
				Color="#FFEDF5FF"
				Offset="0" />
			<GradientStop
				Color="#FFDDE9FF"
				Offset="0.5" />
			<GradientStop
				Color="#FFC7D2FF"
				Offset="1" />
		</LinearGradientBrush>
	</Window.Background>
	<Grid>
		<Grid
			Margin="24"
			Grid.Column="1">
			<Grid.Background>
				<LinearGradientBrush
					StartPoint="0,0"
					EndPoint="0,1">
					<LinearGradientBrush.GradientStops>
						<GradientStop
							Color="#FFFFFFFF"
							Offset="0.011936339522546418" />
						<GradientStop
							Color="#FFFFFFFF"
							Offset="0.99602122015915118" />
						<GradientStop
							Color="#FFFFFFFF"
							Offset="0.1816976127320955" />
					</LinearGradientBrush.GradientStops>
				</LinearGradientBrush>
			</Grid.Background>
			<Grid.RowDefinitions>
				<!-- Single star row so the card stretches to fill available height -->
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<!-- Card container - main content surface with subtle gradient -->
			<Border
				Grid.Row="0"
				CornerRadius="12"
				Padding="20"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				SnapsToDevicePixels="True"
				Grid.ColumnSpan="2">
				<Border.Background>
					<LinearGradientBrush
						StartPoint="0,0"
						EndPoint="1,1">
						<LinearGradientBrush.GradientStops>
							<GradientStop
								Color="#FFEDA8A8"
								Offset="0" />
							<GradientStop
								Color="#FFF5F7FF"
								Offset="0.5" />
							<GradientStop
								Color="#FFE7ECFF"
								Offset="1" />
							<GradientStop
								Color="#FFCEDBEF"
								Offset="0.067639257294429711" />
							<GradientStop
								Color="#FFC0C2DB"
								Offset="0.0053050397877984082" />
						</LinearGradientBrush.GradientStops>
					</LinearGradientBrush>
				</Border.Background>
				<Border.Effect>
					<DropShadowEffect
						Color="#33000000"
						BlurRadius="22"
						ShadowDepth="6"
						Opacity="0.5" />
				</Border.Effect>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<!-- Header -->
					<StackPanel
						Grid.Row="0"
						Margin="0,0,0,4">
						<TextBlock
							Text="Bio Data"
							FontSize="22"
							FontWeight="Bold"
							Foreground="#1F2933"
							Margin="0,0,0,4" />
						<TextBlock
							Text="Please fill in your personal information"
							FontSize="12"
							Foreground="#5A6B80" />
					</StackPanel>
					<!-- Form fields -->
					<Grid
						Grid.Row="1"
						Margin="0,12,0,0">
						<Grid.RowDefinitions>
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
						</Grid.RowDefinitions>
						<Grid.Resources>
							<!-- Rounded input style for TextBox -->
							<Style
								TargetType="TextBox"
								x:Key="RoundedTextBox">
								<!-- Slightly larger vertical margin between text inputs -->
								<Setter
									Property="Margin"
									Value="0,3,0,9" />
								<Setter
									Property="Padding"
									Value="10,8" />
								<Setter
									Property="FontSize"
									Value="13" />
								<Setter
									Property="Background"
									Value="#F5F7FB" />
								<Setter
									Property="BorderBrush"
									Value="#CBD2E1" />
								<Setter
									Property="BorderThickness"
									Value="1" />
								<!-- Slightly smaller height so all content fits in 850px window -->
								<Setter
									Property="Height"
									Value="38" />
								<Setter
									Property="SnapsToDevicePixels"
									Value="True" />
								<Setter
									Property="Template">
									<Setter.Value>
										<ControlTemplate
											TargetType="TextBox">
											<Border
												Background="{TemplateBinding Background}"
												BorderBrush="{TemplateBinding BorderBrush}"
												BorderThickness="{TemplateBinding BorderThickness}"
												CornerRadius="8">
												<ScrollViewer
													Margin="0"
													x:Name="PART_ContentHost" />
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Setter
									Property="Effect">
									<Setter.Value>
										<DropShadowEffect
											Color="#22000000"
											BlurRadius="10"
											ShadowDepth="1"
											Opacity="0.45" />
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger
										Property="IsKeyboardFocused"
										Value="True">
										<Setter
											Property="BorderBrush"
											Value="#4C6FFF" />
										<Setter
											Property="Background"
											Value="#FFFFFF" />
									</Trigger>
									<Trigger
										Property="IsEnabled"
										Value="False">
										<Setter
											Property="Opacity"
											Value="0.65" />
									</Trigger>
								</Style.Triggers>
							</Style>
							<!-- Rounded style for ComboBox (uses default template to keep dropdown working) -->
							<Style
								TargetType="ComboBox"
								x:Key="RoundedComboBox">
								<!-- Slightly larger vertical margin between combo boxes -->
								<Setter
									Property="Margin"
									Value="0,3,0,9" />
								<Setter
									Property="Padding"
									Value="10,4" />
								<Setter
									Property="FontSize"
									Value="13" />
								<Setter
									Property="VerticalContentAlignment"
									Value="Center" />
								<Setter
									Property="Background"
									Value="#F5F7FB" />
								<Setter
									Property="BorderBrush"
									Value="#CBD2E1" />
								<Setter
									Property="BorderThickness"
									Value="1" />
								<!-- Match height with text inputs -->
								<Setter
									Property="Height"
									Value="38" />
								<Setter
									Property="SnapsToDevicePixels"
									Value="True" />
								<Setter
									Property="Effect">
									<Setter.Value>
										<DropShadowEffect
											Color="#22000000"
											BlurRadius="10"
											ShadowDepth="1"
											Opacity="0.45" />
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger
										Property="IsKeyboardFocused"
										Value="True">
										<Setter
											Property="BorderBrush"
											Value="#4C6FFF" />
										<Setter
											Property="Background"
											Value="#FFFFFF" />
									</Trigger>
								</Style.Triggers>
							</Style>
							<!-- Rounded DatePicker style (keeps default functional template) -->
							<Style
								TargetType="DatePicker"
								x:Key="RoundedDatePicker">
								<!-- Slightly larger vertical margin between date pickers and neighbors -->
								<Setter
									Property="Margin"
									Value="0,3,0,9" />
								<Setter
									Property="FontSize"
									Value="13" />
								<Setter
									Property="VerticalContentAlignment"
									Value="Center" />
								<Setter
									Property="Background"
									Value="#F5F7FB" />
								<Setter
									Property="BorderBrush"
									Value="#CBD2E1" />
								<Setter
									Property="BorderThickness"
									Value="1" />
								<!-- Match height with other inputs -->
								<Setter
									Property="Height"
									Value="38" />
								<Setter
									Property="SnapsToDevicePixels"
									Value="True" />
								<Setter
									Property="Effect">
									<Setter.Value>
										<DropShadowEffect
											Color="#22000000"
											BlurRadius="10"
											ShadowDepth="1"
											Opacity="0.45" />
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger
										Property="IsKeyboardFocused"
										Value="True">
										<Setter
											Property="BorderBrush"
											Value="#4C6FFF" />
										<Setter
											Property="Background"
											Value="#FFFFFF" />
									</Trigger>
								</Style.Triggers>
							</Style>
						</Grid.Resources>
						<!-- Name -->
						<StackPanel
							Grid.Row="0">
							<TextBlock
								Text="Full Name"
								FontWeight="SemiBold"
								Foreground="#1F2933"
								FontSize="14"
								Margin="0,0,0,2" />
							<TextBox
								x:Name="NameTextBox"
								Style="{StaticResource RoundedTextBox}"
								AutomationProperties.Name="Full Name" />
						</StackPanel>
						<!-- Address -->
						<StackPanel
							Grid.Row="1">
							<TextBlock
								Text="Address"
								FontWeight="SemiBold"
								Foreground="#1F2933"
								FontSize="14"
								Margin="0,2,0,2" />
							<TextBox
								x:Name="AddressTextBox"
								Style="{StaticResource RoundedTextBox}"
								Height="52"
								TextWrapping="Wrap"
								AcceptsReturn="True"
								VerticalScrollBarVisibility="Auto"
								AutomationProperties.Name="Address" />
						</StackPanel>
						<!-- Birthdate and Age -->
						<Grid
							Grid.Row="2"
							Margin="0,2,0,0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="*" />
								<ColumnDefinition
									Width="16" />
								<ColumnDefinition
									Width="0.8*" />
							</Grid.ColumnDefinitions>
							<StackPanel
								Grid.Column="0">
								<TextBlock
									Text="Birthdate"
									FontWeight="SemiBold"
									Foreground="#1F2933"
									FontSize="14"
									Margin="0,2,0,2" />
								<!-- Rounded outer border for Birthdate (matches other inputs) -->
								<Border
									CornerRadius="8"
									Background="Transparent"
									SnapsToDevicePixels="True"
									ClipToBounds="True">
									<DatePicker
										x:Name="BirthdatePicker"
										Style="{StaticResource RoundedDatePicker}"
										SelectedDateChanged="BirthdatePicker_SelectedDateChanged"
										AutomationProperties.Name="Birthdate" />
								</Border>
							</StackPanel>
							<StackPanel
								Grid.Column="2">
								<TextBlock
									Text="Age"
									FontWeight="SemiBold"
									Foreground="#1F2933"
									FontSize="14"
									Margin="0,2,0,2" />
								<TextBox
									x:Name="AgeTextBox"
									Style="{StaticResource RoundedTextBox}"
									AutomationProperties.Name="Age"
									ToolTip="Automatically calculated from birthdate" />
							</StackPanel>
						</Grid>
						<!-- Gender -->
						<StackPanel
							Grid.Row="3"
							Margin="0,2,0,0">
							<TextBlock
								Text="Gender"
								FontWeight="SemiBold"
								Foreground="#1F2933"
								FontSize="14"
								Margin="0,2,0,2" />
							<StackPanel
								Orientation="Horizontal"
								Margin="0,2,0,0">
								<CheckBox
									x:Name="MaleCheckBox"
									Content="Male"
									Margin="0,0,16,0"
									VerticalAlignment="Center"
									FontSize="13"
									Checked="GenderCheckBox_Checked"
									AutomationProperties.Name="Male" />
								<CheckBox
									x:Name="FemaleCheckBox"
									Content="Female"
									VerticalAlignment="Center"
									FontSize="13"
									Checked="GenderCheckBox_Checked"
									AutomationProperties.Name="Female" />
							</StackPanel>
							<TextBlock
								Text="Select exactly one option."
								FontSize="11"
								Foreground="#6B7280"
								Margin="0,2,0,0" />
						</StackPanel>
						<!-- Civil Status -->
						<StackPanel
							Grid.Row="4">
							<TextBlock
								Text="Civil Status"
								FontWeight="SemiBold"
								Foreground="#1F2933"
								FontSize="14"
								Margin="0,4,0,2" />
							<!-- Rounded outer border for Civil Status combo -->
							<Border
								CornerRadius="8"
								Background="Transparent"
								SnapsToDevicePixels="True"
								ClipToBounds="True">
								<ComboBox
									x:Name="CivilStatusCombo"
									Style="{StaticResource RoundedComboBox}"
									AutomationProperties.Name="Civil Status"
									IsEditable="False"
									BorderBrush="#FFFFFFFF">
									<ComboBox.Background>
										<LinearGradientBrush
											StartPoint="0,0"
											EndPoint="0,1">
											<LinearGradientBrush.GradientStops>
												<GradientStop
													Color="#FFFFFFFF"
													Offset="0" />
												<GradientStop
													Color="#FFE5E5E5"
													Offset="1" />
											</LinearGradientBrush.GradientStops>
										</LinearGradientBrush>
									</ComboBox.Background>
									<ComboBoxItem
										Content="Single" />
									<ComboBoxItem
										Content="Married" />
									<ComboBoxItem
										Content="Separated" />
									<ComboBoxItem
										Content="Widowed" />
								</ComboBox>
							</Border>
						</StackPanel>
						<!-- Nationality -->
						<StackPanel
							Grid.Row="5">
							<TextBlock
								Text="Nationality"
								FontWeight="SemiBold"
								Foreground="#1F2933"
								FontSize="14"
								Margin="0,4,0,2" />
							<!-- Rounded outer border for Nationality combo -->
							<Border
								CornerRadius="8"
								SnapsToDevicePixels="True"
								ClipToBounds="True"
								Background="#00FFFFFF">
								<ComboBox
									x:Name="NationalityCombo"
									Style="{StaticResource RoundedComboBox}"
									AutomationProperties.Name="Nationality"
									IsEditable="False"
									DisplayMemberPath="DisplayName"
									SelectionChanged="NationalityCombo_SelectionChanged" />
							</Border>
						</StackPanel>
						<!-- Contact Number (with calling code) -->
						<StackPanel
							Grid.Row="6"
							Margin="0,2,0,0">
							<TextBlock
								Text="Contact Number"
								FontWeight="SemiBold"
								Foreground="#1F2933"
								FontSize="14"
								Margin="0,4,0,2" />
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="Auto" />
									<ColumnDefinition
										Width="8" />
									<ColumnDefinition
										Width="*" />
								</Grid.ColumnDefinitions>
								<!-- Country calling code -->
								<Border
									Background="#E5EDFF"
									CornerRadius="8"
									Padding="10,8"
									VerticalAlignment="Center">
									<StackPanel
										Orientation="Horizontal"
										VerticalAlignment="Center">
										<TextBlock
											x:Name="CountryFlagTextBlock"
											FontSize="14"
											Margin="0,0,4,0" />
										<TextBlock
											x:Name="CountryCodeTextBlock"
											FontSize="13"
											FontWeight="SemiBold"
											Foreground="#1F2933" />
									</StackPanel>
								</Border>
								<!-- User editable phone number part -->
								<TextBox
									x:Name="ContactNumberTextBox"
									Grid.Column="2"
									Style="{StaticResource RoundedTextBox}"
									PreviewTextInput="ContactNumberTextBox_PreviewTextInput"
									AutomationProperties.Name="Contact Number"
									ToolTip="Enter the rest of your phone number. Country code is set from nationality." />
							</Grid>
							<TextBlock
								Text="Country code is selected based on nationality (e.g., Philippines +63)."
								FontSize="11"
								Foreground="#6B7280"
								Margin="0,2,0,0" />
						</StackPanel>
						<!-- Submit / Clear buttons -->
						<StackPanel
							Grid.Row="7"
							Margin="0,10,0,0">
							<!-- Submit button (top) -->
							<Border
								CornerRadius="22"
								SnapsToDevicePixels="True"
								ClipToBounds="True"
								Margin="0,0,0,8">
								<Button
									x:Name="SubmitButton"
									Content="Submit"
									Click="SubmitButton_Click"
									Height="44"
									Padding="16,6"
									FontSize="14"
									FontWeight="SemiBold"
									Foreground="White"
									BorderBrush="#3B5BDB"
									BorderThickness="1"
									HorizontalAlignment="Stretch"
									Cursor="Hand">
									<Button.Background>
										<LinearGradientBrush
											StartPoint="0,0"
											EndPoint="1,0">
											<GradientStop
												Color="#FF4C6FFF"
												Offset="0" />
											<GradientStop
												Color="#FF7C5CFF"
												Offset="0.5" />
											<GradientStop
												Color="#FF9B51FF"
												Offset="1" />
										</LinearGradientBrush>
									</Button.Background>
									<Button.Effect>
										<DropShadowEffect
											Color="#33000000"
											BlurRadius="18"
											ShadowDepth="3"
											Opacity="0.7" />
									</Button.Effect>
								</Button>
							</Border>
							<!-- Clear button (bottom) -->
							<Border
								CornerRadius="22"
								SnapsToDevicePixels="True"
								ClipToBounds="True">
								<Button
									x:Name="ClearButton"
									Content="Clear"
									Click="ClearButton_Click"
									Height="44"
									Padding="16,6"
									FontSize="14"
									FontWeight="SemiBold"
									Foreground="#4C6FFF"
									Background="#FFFFFFFF"
									BorderBrush="#CBD2E1"
									BorderThickness="1"
									HorizontalAlignment="Stretch"
									Cursor="Hand">
									<Button.Effect>
										<DropShadowEffect
											Color="#33000000"
											BlurRadius="12"
											ShadowDepth="2"
											Opacity="0.5" />
									</Button.Effect>
								</Button>
							</Border>
						</StackPanel>
					</Grid>
				</Grid>
			</Border>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="0.106088560885609*" />
				<ColumnDefinition
					Width="0.893911439114391*" />
			</Grid.ColumnDefinitions>
		</Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="0*" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
	</Grid>
</Window>